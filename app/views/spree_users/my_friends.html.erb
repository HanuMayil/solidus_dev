<h1> My Friends </h1>

<%= render 'friends/lookup' %>
<% if @friendships.size > 0 %>
   <table class="table table-stripe"”>
     <thead>
          <tr>
             <th colspan= "3" class = "page-header"
             <hr>
                  <h3>My friends</h3>
             </th>
          </tr>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
         </tr>
      </thead>
      <tbody>
        <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.email %></td>
          <td>
            <%= link_to "View Profile", user_path(friend), class: "btn btn-primary btn-s" %>
            <%= link_to 'Remove Friend', friendship_path(friend),
              :method => :delete,
              :data => { :confirm => "Are you sure?" },
              :class => "btn btn-sx btn-danger"%>
          </td>
        </tr>
	       <% end %>
      </tbody>
  </table>
<%else%>
	<div class= "row col-lg012">
    <p class="lead">You dont have any friends.</p>
	</div>
<% end %>
